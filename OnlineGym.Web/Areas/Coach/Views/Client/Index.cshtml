@using OnlineGym.Utilities
@{

    ViewBag.title = "Client management";
    ViewBag.cardTitle = "View Orders";
}
@model List<ClientSubscription>
<section class="Client-table" style="width:100%">


    <div class="container">

        <table id="ClientTable" style="width:100%" class="display  table table-striped">

            <thead>

                <tr>
                    <th>Order id</th>
                    <th>Client Name</th>
                    <th>Subscription Name</th>
                    <th>Status</th>
                    <th>More</th>
                   

                </tr>
            </thead>
            <tbody id="t-body">

                @for (int i = 0; i < Model?.Count(); i++)
                {
                    <tr>
                        <td>@Model[i].ClientSubscriptionId</td>
                        <td>@Model[i].Client.Name</td>

                        <td>@Model[i].Subscription.SubscriptionName</td>


                        <td>@Model[i].Status</td>

                        <td>

                            @if (Model[i].Status == SD.Proccess)
                            {
                                <div class="btn btn-primary">Wait</div>

                            }
                            else if (Model[i].Status == SD.proccessed)
                            {
                                <a href="/Coach/TrainingPlan/CreateForClient?OrderId=@Model[i].ClientSubscriptionId" class="btn btn-primary">Make A Plan</a>
                             

                            }
                            else
                            {
                                
                                <a href="" class="btn btn-primary">More</a>

                            }
                        </td>

                    </tr>
                }



            </tbody>




        </table>

    </div>
</section>



@section Scripts {



    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
