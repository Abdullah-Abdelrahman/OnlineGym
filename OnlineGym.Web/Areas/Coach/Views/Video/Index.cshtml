@{

    ViewBag.cardTitle = "View Videos";
}
@model List<Video>
<section class="Video-table" style="width:100%">


    <div class="container">

        <table id="VideoTable" style="width:100%" class="display  table table-striped">

            <thead>

                <tr>
                    <th>id</th>
                    <th>Title</th>
                    <th>category</th>
                    <th>Url</th>
                    <th>operations</th>

                </tr>
            </thead>
            <tbody id="t-body">

                @for (int i = 0; i < Model?.Count(); i++)
                {
                    <tr>
                        <td>@Model[i].Id</td>
                        <td>@Model[i].Title</td>

                        @if (Model[i].category == 1)
                        {
                            <td>train</td>

                        }
                        else
                        {
                            <td>recpi</td>

                        }

                        <td>@Model[i].Url</td>


                        <td>
                            <button class="btn btn-primary">Send Comment</button>
                        </td>


                    </tr>
                }



            </tbody>




        </table>

    </div>
</section>



@section Scripts {



    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/Video.js"></script>


}
