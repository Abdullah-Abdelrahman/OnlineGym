
@{
	Layout = "_DashBoard";
	ViewBag.title = "JoB management";
	ViewBag.cardTitle = "Create jobs";
}
@model JobTitle;


<section class="Create-job">
	<div class="container">
		<form method="post">
			
			<div class="form-group">
				<label asp-for="JopName">Jop Name</label>
				<input type="text" asp-for="JopName" class="form-control" />
				<span asp-validation-for="JopName"></span>
			</div>
		
			<div class="form-group">
				<label asp-for="JopDiscription">Jop Description</label>
				<input type="text" asp-for="JopDiscription" class="form-control" />
				<span asp-validation-for="JopDiscription"></span>
			</div>


			<div class="form-group">
				<label asp-for="MinSalary">Min Salaray</label>
				<input type="text" asp-for="MinSalary" class="form-control"/>
				<span asp-validation-for="MinSalary"></span>
			</div>


			<div class="form-group">
				<label asp-for="MaxSalary">Max Salaray</label>
				<input type="text" asp-for="MaxSalary" class="form-control" />
				<span asp-validation-for="MaxSalary"></span>

			</div>

			<div class="form-group">
				<button class="btn btn-primary"> Create </button>

			</div>

			
		</form>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

}
