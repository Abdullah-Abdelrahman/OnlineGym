@{
	Layout = "_DashBoard";
	ViewBag.title = "Employee management";
	ViewBag.cardTitle = "Create Employee";
}
@model EmployeeViewModel;


<section class="Create-Employee">
	<div class="container">
		<form method="post">
			
			<div class="form-group">
				<label asp-for="Employee.Name">Employee Name</label>
				<input type="text" asp-for="Employee.Name" class="form-control" />
				<span asp-validation-for="Employee.Name" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Employee.gender">Employee gender</label>
				<input type="text" asp-for="Employee.gender" class="form-control" />
				<span asp-validation-for="Employee.gender" class="text-danger"></span>
			</div>


			<div class="form-group">
				<label asp-for="Employee.Email">Employee Email</label>
				<input type="text" asp-for="Employee.Email" class="form-control" />
				<span asp-validation-for="Employee.Email" class="text-danger"></span>
			</div>


			<div class="form-group">
				<label asp-for="Employee.Phone">Employee Phone</label>
				<input type="text" asp-for="Employee.Phone" class="form-control" />
				<span asp-validation-for="Employee.Phone"></span>

			</div>

			<div class="form-group">
				<label asp-for="Employee.HireDate">Employee HireDate</label>
				<input type="text" asp-for="Employee.HireDate" class="form-control" />
				<span asp-validation-for="Employee.HireDate"></span>

			</div>


			<div class="form-group">
				<label asp-for="Employee.JobTitleId">Job TiTle</label>
				
				<select asp-for="Employee.JobTitleId" asp-items="Model.jobTitles" class="form-control">
					<option disabled selected>-- Select Job Title</option>
				</select>
				<input hidden asp-for="jobTitles" />

				<span asp-validation-for="Employee.JobTitleId" class="text-danger"></span>

			</div>

		
			<div class="form-group">
				<label asp-for="Salary.MounthSalary">Employee Salary</label>
				<input type="text" asp-for="Salary.MounthSalary" class="form-control" />
				<span asp-validation-for="Salary.MounthSalary" class="text-danger"></span>

			</div>
			<div class="form-group" style="display:flex;justify-content:center">
				<button class="btn btn-primary"> Create </button>

			</div>


		</form>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

}
