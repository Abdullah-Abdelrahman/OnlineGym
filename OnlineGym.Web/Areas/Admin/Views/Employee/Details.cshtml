@model EmployeeDetailsViewModel;
@{

	ViewBag.title = "Employee management";
	ViewBag.cardTitle = "View Employee";
}




<section class="view-Employee">
	<div class="container">
		
			<input hidden asp-for="Employee.EmployeeId" />
			<div class="form-group">
				<label asp-for="Employee.Name">Employee Name</label>
				<input type="text" asp-for="Employee.Name" readonly class="form-control" />
				
			</div>

			<div class="form-group">
				<label asp-for="Employee.gender">Employee gender</label>
			<input type="text" asp-for="Employee.gender" readonly class="form-control" />
				
			</div>


			<div class="form-group">
				<label asp-for="Employee.Email">Employee Email</label>
			<input type="text" asp-for="Employee.Email" readonly class="form-control" />
				
			</div>


			<div class="form-group">
				<label asp-for="Employee.Phone">Employee Phone</label>
			<input type="text" asp-for="Employee.Phone" readonly class="form-control" />
				

			</div>

			<div class="form-group">
				<label asp-for="Employee.HireDate">Employee HireDate</label>
			<input type="text" asp-for="Employee.HireDate" readonly class="form-control" />
			

			</div>

			<div class="form-group">
				<label asp-for="Employee.JobTitle.JopName">Job TiTle</label>

			<input asp-for="Employee.JobTitle.JopName" readonly class="form-control" />

				

			</div>


			
			<div class="form-group">
				<label asp-for="Salary.MounthSalary">Employee Salary</label>
			<input type="text" asp-for="Salary.MounthSalary" readonly class="form-control" />
				

			</div>

			<div class="form-group">
				<label asp-for="Salary.bonus"></label>
			<input type="text" asp-for="Salary.bonus" readonly class="form-control" />
				
			</div>



		<div class="form-group">
			<label asp-for="EmployeeRate.Rate">Employee rate</label>
			<input type="text" asp-for="EmployeeRate.Rate" readonly class="form-control" />
			

		</div>


	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

}
