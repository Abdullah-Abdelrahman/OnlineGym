@using OnlineGym.Utilities
@{


	ViewBag.title = "Order management";
	ViewBag.cardTitle = "Get Client Information";
}


@model ClientSubscriptionDetails;
<div class="container" style="background-color:white">



	<h2>Contact Number : @Model.ClientPhone</h2>


	<form method="post" style="">
		<input type="text" asp-for="ClientSubscriptionId" hidden class="form-control" />

		
			<div class="form-group">
				<label asp-for="Gender">Client Gender</label>
				<input type="text" asp-for="Gender" class="form-control" />
				<span asp-validation-for="Gender"></span>
			</div>


			<div style="display:flex;justify-content:space-between">

				<div class="form-group" style="flex:0.4">
					<label asp-for="Hight">Hight</label>
					<input type="text" asp-for="Hight" class="form-control" />
					<span asp-validation-for="Hight"></span>
				</div>



				<div class="form-group" style="flex:0.4">
					<label asp-for="Weight">Weight</label>
					<input type="text" asp-for="Weight" class="form-control" />
					<span asp-validation-for="Weight"></span>
				</div>

			</div>


			<div style="display:flex;justify-content:space-between">


				<div class="form-group" style="flex:0.45">
					<label asp-for="BodyFat">Body Fat</label>
					<input type="text" asp-for="BodyFat" class="form-control" />
					<span asp-validation-for="BodyFat"></span>
				</div>

				<div class="form-group" style="flex:0.45">
					<label asp-for="Age">Age</label>
					<input type="text" asp-for="Age" class="form-control" />
					<span asp-validation-for="Age"></span>
				</div>

			</div>



			<div class="form-group">
				<label asp-for="Diseases">Diseases</label>
				<input type="text" asp-for="Diseases" class="form-control" />
				<span asp-validation-for="Diseases"></span>
			</div>

			<div style="display:flex;justify-content:center">

			<div class="form-group" style="width:40%">
				<label asp-for="Target">Target</label>
				<input type="text" asp-for="Target" class="form-control" />
				<span asp-validation-for="Target"></span>
			</div>
			</div>
			

			<div class="form-group">
				<button class="btn btn-primary">Done</button>

			</div>
	


		

	</form>


</div>

@section Scripts {



	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

}
