@{

	ViewBag.title = "Exercise management";
	ViewBag.cardTitle = "Create Exercise";
}
@model ExerciseViewModel;


<section class="Create-Exercise">
	<div class="container">
		<form method="post">

			<div class="form-group">
				<label asp-for="Exercise.Name">Exercise Name</label>
				<input asp-for="Exercise.Name" class="form-control" />
				<span asp-validation-for="Exercise.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Exercise.Description">Exercise Description</label>
				<input asp-for="Exercise.Description" class="form-control" />
				<span asp-validation-for="Exercise.Description" class="text-danger"></span>
			</div>


			
			<div class="form-group">
				<label asp-for="Exercise.VideoUrl">Video Url</label>
				<select asp-for="Exercise.VideoUrl" asp-items="Model.Videos" class="form-control">
					<option selected="" value="0">-- Select video --</option>
				</select>
			</div>




			<div class="form-group">
				<button class="btn btn-primary"> Create </button>

			</div>


		</form>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

}
