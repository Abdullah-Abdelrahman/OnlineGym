@{

    ViewBag.title = "Exercise management";
    ViewBag.cardTitle = "View Exercise";
}
@model List<Exercise>
<section class="Exercise-table" style="width:100%">

    <div style="margin-bottom:10px;display:flex;justify-content:center">
        <a href="/Admin/Exercise/Create" class="btn btn-primary">Create</a>
    </div>



    <div class="container">

        <table id="ExerciseTable" style="width:100%" class="display  table table-striped">

            <thead>

                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>VideoUrl</th>
                    <th>operations</th>

                </tr>
            </thead>
            <tbody id="t-body">

                @for (int i = 0; i < Model?.Count(); i++)
                {
                    <tr>
                        <td>@Model[i].Id</td>
                        <td>@Model[i].Name</td>

                        <td>@Model[i].Description</td>

                        <td>@Model[i].VideoUrl</td>


                        <td>
                            <a href="/Admin/Exercise/Update/@Model[i].Id" class="btn btn-success">Update</a>
                            <button onclick="DeleteItem(@Model[i].Id.ToString())" class="btn btn-danger">Delete</button>

                        </td>

                    </tr>
                }



            </tbody>




        </table>

    </div>
</section>



@section Scripts {



    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/Video.js"></script>


}
