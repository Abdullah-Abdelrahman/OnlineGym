@using OnlineGym.Utilities
@{
    Layout = "_DashBoard";
	ViewBag.title = "Personal Information";
	ViewBag.cardTitle = "General Information";
}
@model ClientViewModel


	<div class="container">
    <form method="post" enctype="multipart/form-data">


        <div class="block_img" style="display:flex;justify-content:end;position:relative">
            <div class="form-group" style="" >
                <div class="custom-file" style="position:absolute;left:70%;top:90%">

                    <input style="width:30%" asp-for="formFile" class="form-control form-control-sm" type="file" id="customFile_0"
                               onchange="document.getElementById('PreviewPhoto_0').src = window.URL.createObjectURL(this.files[0])" />
                    <span asp-validation-for="formFile" class="text-danger"></span>

                </div>
                <input hidden asp-for="Client.ProfilePhoto" type="text" value="Client.ProfilePhoto" id="Block_image_0" />
            </div>
                <div class="PreviewPhoto_block" style="display:flex;justify-content:end">

                    @if (Model.Client.ProfilePhoto != null && Model.Client.ProfilePhoto != "")
                    {
                        <img class="PreviewPhoto" style="width:40%" id="PreviewPhoto_0" src="~/Client/ProfilePhotos/@Model.Client.ProfilePhoto" alt="Logo Image" />

                    }
                    else
                    {
                        <img class="PreviewPhoto" style="width:40%" id="PreviewPhoto_0" src="~/Client/ProfilePhotos/no_User_Photo.jpg" alt="Logo Image" />
   
                    }
                </div>
        </div>
			<div class="form-group">
				<label asp-for="Client.Name">User Name</label>
            <input type="text" asp-for="Client.Name" value="@Model.Client.Name" class="form-control" />
            <span asp-validation-for="Client.Name" class="text-danger"></span>
			</div>

			<div class="form-group">
            <label asp-for="Client.PhoneNumber">Phone Number</label>
            <input type="text" asp-for="Client.PhoneNumber" value="@Model.Client.PhoneNumber" class="form-control" />
            <span asp-validation-for="Client.PhoneNumber" class="text-danger"></span>
			</div>



			<div class="form-group" style="display:flex;justify-content:center">
				<button class="btn btn-primary"> Save </button>

			</div>


		</form>
	</div>


@section Scripts {



    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
