@{
    Layout = "_DashBoard";
}
@model List<DayExerciseViewModel>

<div class="container" style="display:flex;flex-wrap:wrap;justify-content: space-between;">

    @{
       
        foreach (var Item in Model)
        {
            
                <div class="card" style="width:100%;position:relative;display:flex;flex-direction:row">

                    <div style="width:10%;height:100px;overflow:hidden;border-radius:10px">
                        <img class="" src="~/Client/images/dragon_1.jpg" style="width:100%" alt="Card image cap">


                    </div>
                    <div class="card-body" style="flex:0.3">
                        <p class="card-text" style="font-weight:bold"> 
                        @Item.DayExercise.Exercise.Name.ToUpper()
                        </p>
                    </div>
                    <div style="flex:0.2;display:flex;justify-content:center;align-items:center;flex-direction:column;padding-top:30px">
                        <a style="color:orangered;font-size:20px" href="@Item.url">
                            <i class="fa-solid fa-tv"></i>

                        </a>

                        <p>
                            Watch and learn
                        
                        </p>

                        
                    </div>

                    <div style="flex:0.2;display:flex;flex-direction:column;justify-content:center;align-items:center;margin-right:-30%">



                    @if (Item.DayExercise.isDone && Item.CanUpdate == true)
                          {
                        <a class="btn btn-danger" style="width:30px;height:30px;color:white;display:flex;justify-content:center" asp-controller="Dashboard" asp-action="MarkDayExerciseASDoneOrOpsite" asp-route-dayId="@Item.DayExercise.dayId" asp-route-ExerciseId="@Item.DayExercise.ExerciseId">
                            <i class="fa-solid fa-xmark"></i>
                        </a>


                        <p>Not Finshed</p>
                          
                          }
                          else if(Item.CanUpdate==true)
                          {
                        <a class="btn btn-primary" style="width:30px;height:30px;color:white;display:flex;justify-content:center" asp-controller="Dashboard" asp-action="MarkDayExerciseASDoneOrOpsite" asp-route-dayId="@Item.DayExercise.dayId" asp-route-ExerciseId="@Item.DayExercise.ExerciseId">
                            <i class="fa-solid fa-check"></i>
                        </a>

                        <p>Done</p>
                          }
                          else{
                              if(Item.DayExercise.isDone){
                                  <p style="color:lawngreen">Done</p>
                              }
                              else{
                                  <p style="color:red">Not Done</p>
                              }
                              
                              <p>Cant Access</p>
                          }
                                                
                    </div>




                </div>
            

           
        }
    }

</div>

@section Scripts {



    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
