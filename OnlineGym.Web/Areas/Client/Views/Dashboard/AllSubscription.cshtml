@using OnlineGym.Utilities
@{
    Layout = "_DashBoard";
}
@model List<ClientSubscription>

<div class="container" style="display:flex;flex-wrap:wrap;justify-content: space-between;flex-direction:column">

    @{

        if (Model != null)
        {
            foreach(var item in Model)
            {
               
                <a href="">

                    <div class="card" style="position:relative;width:100%;height:100px;border-radius:10px;background-image:url(/GymImages/SubscriptionImages/Subscription_1.jpg)">


                        <div class="card-body" style="">
                            <p class="card-text" style="font-size:2rem;font-weight:bold;color:goldenrod;margin:0px;"> @item?.Subscription?.SubscriptionName</p>

                        </div>

                        <p style="text-align:end;margin:0px;position:absolute;right:5%;top:10%;font-size:1.5rem;color:white">Order Date : @item?.orderDate.ToString()</p>

                        @if (item.Status == SD.Working)
                        {
                            <p style="position:absolute;top:20%;left:40%;text-align:center;font-weight:bold;font-size:3rem;margin:0px;color:greenyellow">
                                <i>
                                    @item?.Status

                                </i>
                            </p>

                        }
                        else if (item.Status == SD.Pending)
                        {
                            <p style="position:absolute;top:20%;left:40%;text-align:center;font-weight:bold;font-size:3rem;margin:0px;color:white">
                                <i>
                                    @item?.Status

                                </i>
                            </p>
                        }
                        else if (item.Status == SD.Aproved || item.Status == SD.Proccess)
                        {
                            <p style="position:absolute;top:20%;left:40%;text-align:center;font-weight:bold;font-size:3rem;margin:0px;color:orange">
                                <i>
                                    Not Active Yet

                                </i>
                            </p>
                        }
                        else if (item.Status == SD.proccessed)
                        {
                            <p style="position:absolute;top:20%;left:40%;text-align:center;font-weight:bold;font-size:3rem;margin:0px;color:papayawhip">
                                <i>
                                    Your plan is uder devoplop

                                </i>
                            </p>
                        }
                        else if (item.Status == SD.Canceled)
                        {
                            <p style="position:absolute;top:20%;left:40%;text-align:center;font-weight:bold;font-size:3rem;margin:0px;color:red">
                                <i>
                                    Canceled

                                </i>
                            </p>
                        }
                        else if (item.Status == SD.Finished)
                        {
                            <p style="position:absolute;top:20%;left:40%;text-align:center;font-weight:bold;font-size:3rem;margin:0px;color:greenyellow">
                                <i>
                                    Finished

                                </i>
                            </p>
                        }
                        




                    </div>
                
                </a>
              
            }
            
        }
        else
        {
            <p>You have No Subacription Yet</p>
        }


    }

</div>

@section Scripts {



    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
